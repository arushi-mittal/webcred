 
{
  "manifest_version": 2,

  "name": "Credibility Score Extension",
  "description": "An extension to find the credibility score for a given website",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://ajax.googleapis.com/",
    "http://localhost:5000",
    "http://localhost:8000",
    "activeTab"
  ]
}
